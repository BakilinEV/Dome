

Функция ПолучитьСписокУсловийОплат(Спк=Неопределено) Экспорт
	
	Если Спк = Неопределено ТОгда
		Спк = Новый СписокЗначений;
	КонецЕСЛИ;

	Спк.Добавить(0,"100 % предоплата");
	Спк.Добавить(14,"14 дн. после поставки");
	Спк.Добавить(30,"30 дн. после поставки");
	Спк.Добавить(45,"45 дн. после поставки");
	Спк.Добавить(60,"60 дн. после поставки");
	Спк.Добавить(90,"90 дн. после поставки");
	
	Возврат Спк;
	
КонецФункции